<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BangumiNote" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/theme_background</item>\
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BangumiNote" parent="Base.Theme.BangumiNote" />

    <style name="CollectionLabel">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CollectionCount">
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_dark2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchFilterToggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/color_toggle_background</item>
        <item name="android:drawableTint">@color/color_toggle</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/color_toggle</item>
    </style>

    <style name="EpisodeFilterToggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/content_background</item>
        <item name="android:backgroundTint">@color/color_toggle_background</item>
        <item name="android:textColor">@color/color_toggle</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="Theme.BangumiNote.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:indeterminateDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="Theme.BangumiNote.RelatedWebButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:backgroundTint">@color/content_background</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="CollectionRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/content_background</item>
        <item name="android:backgroundTint">@color/color_toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_toggle</item>
    </style>

    <style name="FloatingActionButton_Round">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>